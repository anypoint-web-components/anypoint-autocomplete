  "license": "Apache-2.0",
  "main": "anypoint-autocomplete.js",
  "keywords": [
    "web-components",
    "anypoint",
    "button"
  ],
  "authors": [
    "Pawel Psztyc",
    "The Advanced REST client authors <arc@mulesoft.com>"
  ],
